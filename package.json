{
  "name": "graphql-react",
  "version": "1.0.0-alpha.3",
  "description": "A lightweight GraphQL client for React.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenseric/graphql-react.git"
  },
  "homepage": "https://github.com/jaydenseric/graphql-react#readme",
  "bugs": "https://github.com/jaydenseric/graphql-react/issues",
  "keywords": [
    "graphql",
    "react",
    "client",
    "query",
    "mutation",
    "file",
    "upload",
    "multipart"
  ],
  "files": [
    "lib"
  ],
  "main": "lib",
  "module": "lib/index.mjs",
  "engines": {
    "node": ">=7.6"
  },
  "browserslist": ">1%",
  "peerDependencies": {
    "react": "^16.3.0-alpha.1"
  },
  "dependencies": {
    "extract-files": "^3.1.0",
    "fast-deep-equal": "^1.1.0",
    "fnv1a": "^1.0.1",
    "object-assign": "^4.1.1",
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.42",
    "@babel/core": "^7.0.0-beta.42",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/preset-react": "^7.0.0-beta.42",
    "apollo-server-koa": "^1.3.3",
    "apollo-upload-server": "^5.0.0",
    "ava": "^1.0.0-beta.2",
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-replace-object-assign": "^2.0.0-beta.0",
    "cross-env": "^5.1.4",
    "cross-fetch": "^2.1.0",
    "documentation": "^6.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-ava": "^4.5.1",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.7.0",
    "get-port": "^3.2.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1",
    "husky": "^0.14.3",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "react": "^16.3.0-alpha.3",
    "react-dom": "^16.3.0-alpha.3",
    "rimraf": "^2.6.2",
    "size-limit": "^0.17.0"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "build": "run-p build:*",
    "build:js": "babel src -d lib",
    "build:mjs": "cross-env ESM=true babel src -d lib --keep-file-extension",
    "postbuild": "prettier 'lib/**/*.{mjs,js}' --write",
    "jsdoc": "documentation readme src -s API -c documentation.json --sort-order alpha -q",
    "postjsdoc": "prettier readme.md --write",
    "prewatch": "npm run build",
    "watch": "run-p watch:*",
    "watch:build": "run-p 'build:* -- --skip-initial-build --watch'",
    "watch:test": "ava -vw",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint . --ext mjs,js",
    "lint:prettier": "prettier '**/*.{json,md}' -l",
    "lint:jsdoc": "documentation lint src",
    "fix": "run-p fix:*",
    "fix:eslint": "eslint . --ext mjs,js --fix",
    "fix:prettier": "prettier '**/*.{json,md}' --write",
    "presize": "npm run build",
    "size": "size-limit",
    "pretest": "npm run build",
    "test": "ava",
    "precommit": "lint-staged",
    "prepublishOnly": "run-s jsdoc lint size test"
  },
  "lint-staged": {
    "*.{mjs,js}": "eslint",
    "*.{json,md}": "prettier -l"
  },
  "eslintIgnore": [
    "!.*",
    "node_modules",
    "lib",
    ".next"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:ava/recommended"
    ],
    "plugins": [
      "react",
      "ava",
      "prettier"
    ],
    "rules": {
      "require-jsdoc": "warn",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false
        }
      ],
      "curly": [
        "error",
        "multi"
      ],
      "prefer-destructuring": [
        "error",
        {
          "array": true,
          "object": true
        }
      ],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "size-limit": [
    {
      "name": "CJS",
      "path": "lib/index.js",
      "limit": "4 KB"
    },
    {
      "name": "ESM",
      "path": "lib/index.mjs",
      "limit": "4 KB"
    }
  ],
  "ava": {
    "sources": [
      "src/**/*.mjs",
      "!lib",
      "!example"
    ],
    "cache": false
  }
}
