{
  "name": "skimp",
  "private": true,
  "description": "A skimpy GraphQL client and React components.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenseric/skimp.git"
  },
  "homepage": "https://github.com/jaydenseric/skimp#readme",
  "bugs": "https://github.com/jaydenseric/skimp/issues",
  "keywords": ["graphql", "react", "upload"],
  "files": ["lib"],
  "main": "lib",
  "module": "lib/index.mjs",
  "engines": {
    "node": ">=6.10"
  },
  "browserslist": ">1%",
  "peerDependencies": {
    "react": "^16.3.0-alpha.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.40",
    "fast-deep-equal": "^1.0.0",
    "fnv1a": "^1.0.1",
    "prop-types": "^15.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "apollo-server-koa": "^1.3.2",
    "apollo-upload-server": "^4.0.2",
    "ava": "^1.0.0-beta.2",
    "babel-eslint": "^8.2.2",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.1",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.7.0",
    "get-port": "^3.2.0",
    "graphql": "^0.13.1",
    "graphql-tools": "^2.21.0",
    "husky": "^0.14.3",
    "isomorphic-unfetch": "^2.0.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "lint-staged": "^6.1.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "react": "^16.3.0-alpha.1",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "size-limit": "^0.14.1"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "build": "run-p build:*",
    "build:js": "babel src -d lib",
    "build:mjs": "cross-env MODULE=true babel src -d lib --keep-file-extension",
    "postbuild": "prettier 'lib/**/*.{js,mjs}' --write",
    "prewatch": "npm run build",
    "watch": "run-p watch:*",
    "watch:build": "run-p 'build:* -- --skip-initial-build --watch'",
    "watch:test": "ava --no-cache -vw",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint . --ext js,mjs",
    "lint:prettier": "prettier '**/*.{json,md}' -l --ignore-path .gitignore",
    "fix": "run-p fix:*",
    "fix:eslint": "eslint . --ext js,mjs --fix",
    "fix:prettier":
      "prettier '**/*.{json,md}' --write --ignore-path .gitignore",
    "presize": "npm run build",
    "size": "size-limit",
    "pretest": "npm run build",
    "test": "ava --no-cache",
    "precommit": "lint-staged",
    "prepublishOnly": "run-p lint size test"
  },
  "lint-staged": {
    "*.{js,mjs}": "eslint",
    "*.{json,md}": "prettier -l"
  },
  "eslintIgnore": ["!.*", "node_modules", ".next", "lib"],
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react", "prettier"],
    "rules": {
      "no-console": 0,
      "curly": ["error", "multi"],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "size-limit": [
    {
      "name": "CJS",
      "path": "lib/index.js",
      "limit": "8 KB"
    },
    {
      "name": "ESM",
      "path": "lib/index.mjs",
      "limit": "8 KB"
    }
  ]
}
