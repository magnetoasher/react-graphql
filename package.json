{
  "name": "skimp",
  "private": true,
  "description": "A skimpy React GraphQL client.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "http://jaydenseric.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenseric/skimp.git"
  },
  "homepage": "https://github.com/jaydenseric/skimp#readme",
  "bugs": "https://github.com/jaydenseric/skimp/issues",
  "keywords": ["graphql", "react", "upload"],
  "files": ["lib", "!lib/test.*"],
  "main": "lib",
  "module": "lib/index.mjs",
  "engines": {
    "node": ">=6.10"
  },
  "browserslist": ">1%",
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.39",
    "apollo-server-koa": "^1.3.2",
    "fnv1a": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.39",
    "@babel/core": "^7.0.0-beta.39",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.39",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "apollo-upload-server": "^4.0.2",
    "ava": "^1.0.0-beta.1",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.16.0",
    "eslint-plugin-prettier": "^2.5.0",
    "get-port": "^3.2.0",
    "graphql": "^0.12.3",
    "graphql-tools": "^2.20.0",
    "husky": "^0.14.3",
    "isomorphic-unfetch": "^2.0.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "lint-staged": "^6.1.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "build": "run-p build:*",
    "build:js": "babel src -d lib -s",
    "build:mjs": "MODULE=true babel src -d lib -s --keep-file-extension",
    "prewatch": "npm run build",
    "watch": "run-p watch:*",
    "watch:build": "run-p 'build:* -- --skip-initial-build --watch'",
    "watch:test": "ava lib/test.js -vw",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint . --ext js,mjs",
    "lint:prettier": "prettier -l **/*.{json,md}",
    "fix": "run-p fix:*",
    "fix:eslint": "eslint . --ext js,mjs --fix",
    "fix:prettier": "prettier --write **/*.{json,md}",
    "pretest": "npm run build",
    "test": "ava lib/test.js",
    "precommit": "lint-staged",
    "prepublishOnly": "run-s lint test"
  },
  "lint-staged": {
    "*.{js,mjs}": "eslint",
    "*.{json,md}": "prettier -l"
  },
  "eslintIgnore": ["!.*", "node_modules", "lib"],
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": ["eslint:recommended"],
    "plugins": ["prettier"],
    "rules": {
      "no-console": 0,
      "curly": ["error", "multi"],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false
  }
}
