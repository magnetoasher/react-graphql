{
  "name": "graphql-react-example",
  "private": true,
  "dependencies": {
    "apollo-server-koa": "^1.3.6",
    "babel-plugin-transform-inline-environment-variables": "^0.4.0",
    "cross-fetch": "^2.1.1",
    "dotenv-cli": "^1.4.0",
    "esm": "^3.0.28",
    "graphql": "^0.13.2",
    "graphql-react": "^1.0.0-alpha.5",
    "graphql-tools": "^3.0.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "next": "^6.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "now": "^11.1.7"
  },
  "scripts": {
    "build": "dotenv next build",
    "start": "dotenv node -- -r esm server",
    "deploy": "now"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-inline-environment-variables"
    ]
  },
  "eslintConfig": {
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off"
    }
  },
  "now": {
    "alias": "graphql-react",
    "env": {
      "NODE_ENV": "production",
      "DOMAIN": "https://graphql-react.now.sh",
      "PORT": 80,
      "API_URL": "https://graphql-react.now.sh/graphql"
    }
  }
}
