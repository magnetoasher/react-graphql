{
  "name": "graphql-react-example",
  "private": true,
  "dependencies": {
    "@std/esm": "^0.25.5",
    "apollo-server-koa": "^1.3.3",
    "babel-plugin-transform-inline-environment-variables": "^0.3.0",
    "cross-fetch": "^2.1.0",
    "dotenv-cli": "^1.4.0",
    "graphql": "^0.13.2",
    "graphql-react": "latest",
    "graphql-tools": "^2.23.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "next": "^5.1.0",
    "react": "^16.3.0-alpha.3",
    "react-dom": "^16.3.0-alpha.3"
  },
  "devDependencies": {
    "now": "^10.2.1"
  },
  "scripts": {
    "build": "dotenv next build",
    "start": "dotenv node -- -r @std/esm server.mjs",
    "deploy": "now"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-inline-environment-variables"
    ]
  },
  "eslintConfig": {
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off"
    }
  },
  "now": {
    "alias": "graphql-react",
    "env": {
      "NODE_ENV": "production",
      "DOMAIN": "https://graphql-react.now.sh",
      "PORT": 80,
      "API_URL": "https://graphql-react.now.sh/graphql"
    }
  }
}
